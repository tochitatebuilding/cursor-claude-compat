{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check Claude Docs Sync (Cursor only)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "if [[ -n \"$CURSOR_AGENT\" ]] || [[ \"$VSCODE_CWD\" == *cursor* ]] || [[ \"$PATH\" == *.cursor-server* ]]; then ~/.cursor/skills-cursor/sync-claude-docs/check.sh; fi"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Sync Claude Docs",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "~/.cursor/skills-cursor/sync-claude-docs/sync.sh"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Sync Claude Docs (Force)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "~/.cursor/skills-cursor/sync-claude-docs/sync.sh --force"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}
